<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cat.merino.albert.laserslides">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_laser_slides"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_laser_slides"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".QuickOSCActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ButtonOSCSettingActivity" />
        <activity android:name=".SeekBarOSCSettingActivity" />
        <activity android:name=".ToggleOSCSettingActivity" />
    </application>

</manifest>